<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCreate"
        android:layout_marginTop="@dimen/def_margin"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_width="55dp"
        app:cardElevation="@dimen/def_elevation"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="@color/color_main_gray"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/itemExecIcon"
            android:src="@drawable/ic_baseline_add_24"
            app:tint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/super_small_margin"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/itemExecName"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/add"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/gray_white"/>

<!--    ЗАДАТЬ ВОПРОС КАК КОНВЕРИТРОВАТЬ ИКОНКУ ИЗ INT В BITMAP-->

</androidx.appcompat.widget.LinearLayoutCompat>